            <button type="submit">Get Weather</button>
        </form>

        <% if (weather) { %>
            <div class="weather-info">
                <h2>City: <%= weather.city %></h2>
                <h2>Temperature: <%= weather.temperature %>Â°C</h2>
                <h2>Condition: <%= weather.description %></h2>
